from tkinter import * # Import tkinter
import tkinter.font
from PIL import Image

class ItemToPurchase:                     # this ItemToPurchase class is a template for creating instances of a Item  
   def __init__(self):                    # this type of method is known as a constructor, setting up attributes of a new instance with specified values
      window = Tk() # Create a window
      window.title("Order Processing Information") # Set title of a window
      photo = Image.open("/Users/thinhnguyen/Desktop/Spring 2019/BIS Development/Python File/GWlogo.gif")
      photo = photo.resize((290,144), Image.ANTIALIAS)
      photo.save("GW_logo.gif","gif")
      GW_logo = PhotoImage(file="GW_logo.gif")
      Label(window, image=GW_logo).grid(row = 1, column = 1, sticky = W)
      Label(window, text = "Product Information - Order Details", font = 'Helvetica 20 bold').grid(row = 4, column = 4, sticky = W)                     
      Label(window, text = "Enter Product Name or Product ID").grid(row = 5, column = 4, sticky = W)
      Label(window, text = "Quantity").grid(row = 6, column = 4, sticky = W)
      Label(window, text = "Price (USD)").grid(row = 7, column = 4, sticky = W)
      Label(window, text = "Order Information").grid(row = 4, column = 1, sticky ='')
      Label(window, text = "Product Information", font = 'Helvetica 15 bold').grid(row = 5, column = 1, sticky ='')
      Label(window, text = "Shipping Information").grid(row = 6, column = 1, sticky = '')
      Label(window, text = "Billing Information").grid(row = 7, column = 1, sticky = '')
      Label(window, text = "Order Summary").grid(row = 8, column = 1, sticky = '')
      
      #set up the input area for the order detail in the right column, using Entry for textboxes 
      self.item_name = StringVar()             # we are initializing the Item with name, description, price and quantity attributes
      Entry(window, textvariable = self.item_name,justify = LEFT).grid(row = 5, column = 5)
      self.item_quantity = StringVar()
      Entry(window, textvariable = self.item_quantity, justify = LEFT).grid(row = 6, column = 5)
      self.item_price = StringVar()
      Entry(window, textvariable = self.item_price, justify = LEFT).grid(row = 7, column = 5)
      self.item_price = 0.0
      self.item_quantity = 0




      window.grid_columnconfigure(7,minsize=100)
      window.grid_rowconfigure(10,minsize=100)   

      window.mainloop()

ItemToPurchase()
